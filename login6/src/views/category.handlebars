<header id="header">
    <div class="container">
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="navbar-top">
                <div class="d-flex justify-content-between align-items-center">
                    <ul class="navbar-top-left-menu">
                        <li class="nav-item"> </li>
                    </ul>
                    <ul class="navbar-top-right-menu">
                        <li class="nav-item">
                            <a href="#" class="nav-link"> </a>
                        </li>
                        <li class="nav-item">
                            <a href="http://127.0.0.1:3000/pos">Post new Thread</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>
</header>
<div class="content-wrapper">
    <div class="container">
        <div class="col-sm-12">
            <div class="card aos-init aos-animate" data-aos="fade-up">
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <h1 class="font-weight-600 mb-4">
                            </h1>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="row">{{#each post}}
                                <div class="col-sm-4 grid-margin">
                                    <div class="rotate-img">
                                        <a href="http://127.0.0.1:3000/category/post/{{id}}"><img src="{{path}}"
                                                alt="banner" class="img-fluid"></a>
                                    </div>
                                </div>
                                <div class="col-sm-8 grid-margin">
                                    <h2 class="font-weight-600 mb-2">
                                        {{title}}
                                    </h2>
                                    <p class="fs-13 text-muted mb-0">
                                        <span class="mr-2">{{time}}</span>
                                    </p>
                                    <p class="fs-15">
                                        {{content}}
                                    </p>
                                </div>
                                {{/each}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="single-wrap d-flex justify-content-center">
    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-start">
            <li class="page-item"><a class="page-link" href="#">PREV</a></li>
            <li class="page-item"><a class="page-link" href="http://127.0.0.1:3000/category/?page=1">01</a></li>
            <li class="page-item"><a class="page-link" href="http://127.0.0.1:3000/category/?page=2">02</a></li>
            <li class="page-item"><a class="page-link" href="http://127.0.0.1:3000/category/?page=3">03</a></li>
            <li class="page-item"><a class="page-link" href="http://127.0.0.1:3000/category/?page=4">04</a></li>
            <li class="page-item"><a class="page-link" href="http://127.0.0.1:3000/category/?page=5">05</a></li>
            <li class="page-item"><a class="page-link" href="#">NEXT</a>
            </li>
        </ul>
    </nav>
</div>