<header id="header">
    <div class="container">
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="navbar-top">
                <div class="d-flex justify-content-between align-items-center">
                    <ul class="navbar-top-left-menu">
                        <li class="nav-item"> </li>
                    </ul>
                    <ul class="navbar-top-right-menu">
                        <li class="nav-item">
                            <a href="#" class="nav-link"> </a>
                        </li>
                        <li class="nav-item">
                            <form action="/category/edit" method="post">
                                <button type="submit" value="{{post.[0].id}}" name="edit"
                                    style="border: 0px; background: #436303; color: white; font-weight:500">SỬA</button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>
</header>
<br>
<div class="row">
    <div class="col-sm-12 grid-center"
        style="display: flex; justify-content:space-between; flex-direction:column;align-items: center;">
        <h2 class="font-weight-600 mb-2" style="text-align: center ;">
            {{post.[0].title}}
        </h2><br>
        <p class="fs-13 text-muted mb-0" style="text-align: center ;">
            <img src="{{post.[0].path}}" height="400px" width="auto">
        </p><br>
        <p class="fs-15" style="text-align: justify; width: 1100px; text-indent: 40px;">
            {{post.[0].contentFull}}
        </p><br>
        <p>{{post.[0].time}}</p>
    </div>
</div>

<hr>
<div class="container">
    <h2>Ý kiến của bạn: </h2>
    <div class="row">
        <div class="col-12">
            <form action="/category/post/" method="post">
                <textarea placeholder="Ý kiến của bạn" value="commentContent" name="commentContent"
                    style="height: 90px; width: 100%;"></textarea><br>
                <div style="float: right;">
                    <button type="submit" value="{{post.[0].id}}" name="commentbtn"
                        style="border-radius: 5px; padding: 5px 20px 5px 20px; margin: 0 5px 0 5px">Gửi</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="container">
    <h2>TOP COMMENT:</h2>
    {{#each comment}}
    <div style="width: 90%; text-align:justify">
        <div class="row">
            <div class="col-2" style="text-align: right;">
                <strong>{{username}}<span>:</span> </strong>
            </div>
            <div class="col-10">
                {{content}}
            </div>
        </div><br>
        <p style="text-align: right;">{{time}}</p>
    </div>
    <hr>{{/each}}
</div>